{
  "name": "RT Lightning",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Style the page",
  "homepage_url": "http://realthread.com",
  "browser_action": {
    "default_title": "Inject!"
  },
  "permissions": [
    "https://*/*",
    "http://*/*",
    "tabs"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://realthread.my.salesforce.com/*"
      ],
      "js": [
        "jquery.js",
        "inject.js"
      ],
      "css": [
        "lightning.css"
      ]
    }
  ]
}